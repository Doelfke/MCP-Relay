{
  "name": "mcp-relay",
  "author": "David Oelfke",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Manage your MCP servers in one place",
  "main": "dist/index.js",
  "keywords": [
    "mcp",
    "relay",
    "ai"
  ],
  "scripts": {
    "build": "webpack --mode=production && npm run copy-assets",
    "start": "electron dist/main.js",
    "dev": "webpack --mode=development && electron dist/main.js",
    "watch": "webpack --mode=development --watch",
    "copy-assets": "mkdir -p dist/assets && cp -R assets/* dist/assets/"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.0.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^36.5.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
